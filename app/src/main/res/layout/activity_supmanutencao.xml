<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supmanutencao">

    <Button
        android:id="@+id/btnAbriPedidoMaterial"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#003BD1"
        android:text="@string/btn_abrir_pedido_material"
        app:layout_constraintBottom_toTopOf="@+id/btnCasifica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCasifica"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:backgroundTint="#003BD1"
        android:text="@string/btn_clasificar_pedido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSair1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#003BD1"
        android:text="@string/btn_sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCasifica" />
</androidx.constraintlayout.widget.ConstraintLayout>

